apiVersion: apps/v1
kind: Deployment
metadata:
  name: cashier-counter-llm2
  labels:
    app: cashier-counter-llm2
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cashier-counter-llm2
  template:
    metadata:
      labels:
        app: cashier-counter-llm2
    spec:
      containers:
        - name: cashier-counter-llm2
          image: zedmanny/cashier-counter:llm-2
          ports:
            - containerPort: 8080
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: cashier-counter-llm2-service
  labels:
    app: cashier-counter-llm2
spec:
  type: NodePort
  selector:
    app: cashier-counter-llm2
  ports:
    - name: http
      protocol: TCP
      port: 8080          # cluster service port
      targetPort: 8080    # container port
      nodePort: 8081      # host port
